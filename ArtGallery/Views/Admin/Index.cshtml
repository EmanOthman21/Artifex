                        }
                    ]
                },
            });

        var lbl = @Html.Raw(Json.Encode(ViewBag.l5));
        var dt = @Html.Raw(Json.Encode(ViewBag.d5));
        var donutChartCanvas = $('#donutChart2').get(0).getContext('2d')
        var donutChart = new Chart(donutChartCanvas,
            {
                type: 'doughnut',
                labels: lbl,
                data: {
                    labels: lbl,
                    datasets: [
                        {
                            data: dt,
                            backgroundColor: ['#f56954', '#00a65a', '#f39c12', '#00c0ef', '#3c8dbc', '#d2d6de', '#fdea12', '#aaff43', '#ffffff', '#000000']
                        }
                    ]
                }
            });


    });

        
</script>

