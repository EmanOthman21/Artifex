                ]
            }
        })

        var lbl = @Html.Raw(Json.Encode(ViewBag.l4));
        var dt = @Html.Raw(Json.Encode(ViewBag.d4));

        var pieChartCanvas = $('#pieChart2').get(0).getContext('2d')
        var pieChart = new Chart(pieChartCanvas,
            {
