@model ArtGallery.ViewModels.ReportViewModel
@{
    ViewBag.Title = "ReportAction";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<section class="content">
    @using (Html.BeginForm("ReportAction", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "form1" }))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Report Information</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="card-body">

                    <div class="form-group">
                        @Html.LabelFor(model => model.Order.ORDER_ID, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Label(Model.Order.ORDER_ID.ToString(), new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Order.ORDER_DATE, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Label(Model.Order.ORDER_DATE.ToString("MM/dd/yyyy"), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Order.DELIVERY_DATE, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @if (Model.Order.DELIVERY_DATE == null)
                            {
                                @Html.Label("", new { @class = "form-control" })

                            }
                            else
                            {
                                DateTime t = ((DateTime)Model.Order.DELIVERY_DATE);
                                @Html.Label(t.ToString("MM/dd/yyyy"), new { @class = "form-control" })
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.OrderInfo.ADMIN_ID, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Label(Model.OrderInfo.ADMIN_ID.ToString(), new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.OrderInfo.SHIPPING_NAME, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Label(Model.OrderInfo.SHIPPING_NAME, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.OrderInfo.AW_CODE, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Label(Model.OrderInfo.AW_CODE.ToString(), new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.OrderInfo.USER_NAME, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Label(Model.OrderInfo.USER_NAME, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Report.TEXT, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Label(Model.Report.TEXT, new { @class = "form-control" })
                        </div>
                    </div>
                    
                    @{
                        if(!Model.Report.ADMIN_ID.HasValue)
                        { 
                            <div class="form-horizontal">
                                <div class="btn-group col-md-10">
                                    <div class="col-md-offset-2 col-md-4">
                                        <input type="submit" value="Ignore" name="Ignore" class="btn btn-block btn-danger" />
                                    </div>
                                    <div class="col-md-offset-2 col-md-4" style="position: absolute; right: 8px">
                                        <input type="submit" value="refund" name="refund" class="btn btn-block btn-success" />
                                    </div>
                                </div>
                        
                            </div>

                        }
                    }

                    @{
                        Session["adminid"] = Model.Adminid;
                        Session["reportid"] = Model.Report.REPORT_ID;
                    } 




                </div>
                </div>
            </div>
        </div>
    }
</section>


