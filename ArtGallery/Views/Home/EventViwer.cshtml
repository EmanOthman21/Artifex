@model ArtGallery.Models.Event
@{
    ViewBag.Title = "Events";
    TempData["buyartwork"] = Model;
    <link rel="stylesheet" type="text/css" src="rating.css" />
    <script type="text/javascript" src="jquery.min.js"></script>
    <script type="text/javascript" src="rating.js"></script>
}

<style>
    b {
        color: #330000
    }
</style>

<h2>Events</h2>
@Html.Hidden("id", Model.ADMIN_ID)
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="image-container" style="width: 80vw">
        <img class="img-thumbnail md-margin-bottom-10" src="@Url.Content(Model.IMAGE)" alt="Profile pic" style="width: 70vw; height: 70vh; margin: auto;" />
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TITLE, "TITLE:", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Label(Model.TITLE, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.INFO, "More info:", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Label(Model.TITLE, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LOCATION, "Location:", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Label(Model.LOCATION, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TICKET_PRICE, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Label(Model.TICKET_PRICE.ToString(), new { @class = "form-control" })
        </div>
    </div>
</div>
<a class="btn btn-default" href='@Url.Action("Buy", "Home", new {title = ViewBag.Title})'>Buy</a>
