@using PagedList
@using PagedList.Mvc
@model ArtGallery.ViewModels.ListExpViewModel
@{
    ViewBag.Title = "Experts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Experts</h2>

<link href="~/Content/paging.css" rel="stylesheet" />

<section class="content" style="padding-top: 1vh">
    <div class="container-fluid">

        <!-- /.row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                            <h3 class="card-title">Experts</h3>
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Expert Name</th>
                                    <th>Birthdate</th>
                                    <th>Link to profile</th>
                                </tr>
                            </thead>
                            <tbody>

                                @for(int i=0; i<Model.Experts.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.Experts[i].EXPERT_UNAME</td>
                                        <td>@Model.Experts[i].BYEAR</td>
                                        <td>@Html.ActionLink("Link", "Index", "Manage", new {Uname = Model.Emails[i]}, null)</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <!-- /.row -->
        <div class="pagination" style="width: 70%">
            @Html.PagedListPager(Model.Experts, page => Url.Action("Experts",
                new {page}), PagedListRenderOptions.ClassicPlusFirstAndLast)
        </div>
    </div><!-- /.container-fluid -->

</section>



